{% block javascripts %}

    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script>
    $(document).ready(function () {

        let dated = document.getElementById('dated');
        let datef = document.getElementById('datef');
        let pJours = document.getElementById('nbj');
        let prixt = document.getElementById('prixt');
        let prix = document.getElementById('prix');
        let codepromo = document.getElementById('codepromo');
        let msgPromo = document.getElementById('erreur');
        let idPromo= document.getElementById('idPromo');
        let prixtot= document.getElementById('prixtot');
        let idProduit = document.getElementById('idProduit');
        let DateError = document.getElementById('dateError');


        pJours.innerHTML="0";
        prixt.innerHTML=""+parseInt(prix.innerText, 10);
        $('#dates').on('change','input',function (event) {
            if(isNaN(dated.value) && isNaN(datef.value))
            {
                let dd = new Date(dated.value);
                let df = new Date(datef.value);
                let time_diff = df.getTime()-dd.getTime();
                let days_diff = time_diff / (1000 * 3600 * 24);

                if(dated.value>datef.value)
                {
                    pJours.innerHTML="0";
                    prixt.innerHTML="0";

                }else {
                    pJours.innerHTML=""+days_diff;
                    prixt.innerHTML=""+parseInt(prix.innerText, 10)*days_diff;
                    prixtot.value=parseInt(prix.innerText, 10)*days_diff;
                }


                $.ajax({
                    url:"/Date",
                    method:"POST",
                    dataType:"JSON",
                    data:{idProduit:idProduit.value,datedeb:dated.value,datefi:datef.value},
                    async:true,
                    success: function (data,status) {
                        if(data['error']==="Date Valide")
                        {

                            DateError.innerHTML="<a class='btn btn-success'>"+data['error']+"</a>";
                        }else
                        {

                            DateError.innerHTML="<a class='btn btn-danger'>"+data['error']+"</a>";
                        }

                    },
                    error: function (xhr, textStatus, errorThrown) {
                        alert('Erreur AJAX');
                    }
                });



            }



        });

        $('#app').on('click',function () {
            $.ajax({
                url:"/Promo",
                method:"POST",
                dataType:"JSON",
                data:{codepromo:codepromo.value},
                async:true,
                success: function (data,status) {
                    msgPromo.innerHTML="Code Applique";
                    let AncienPrix = parseInt(prixt.innerText,10);
                    prixt.innerText=""+(AncienPrix-AncienPrix*(data['taux']/100));
                    idPromo.value=data['idPromo'];
                    prixtot.value=(AncienPrix-AncienPrix*(data['taux']/100));

                },
                error: function (xhr, textStatus, errorThrown) {
                    msgPromo.innerHTML="Code Invalide";
                    idPromo.value=0;
                }
            })
        });



    });


    </script>


