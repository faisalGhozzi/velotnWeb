{% extends 'base.html.twig' %}

{% block body %}
    <div class="fos_user_user_show">
        <section class="product-shop spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                        <div class="filter-widget">
                            <h4 class="fw-title">Profile options</h4>
                            <ul class="filter-catagories">
                                <li><a href="{{ path('fos_user_profile_edit') }}">Modify Profile</a></li>
                                <li><a href="#">Delete Account</a></li>
                                <li><a href="{{ path('location') }}">Mes Locations </a></li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 order-1 order-lg-2">
                        <div class="product-show-option">
                            <div class="row">
                                <div class="col-lg-7 col-md-7">
                                    <div class="select-option">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="product-list" style="width: 3000px">
                            <div class="row">
                                <div class="col-lg-4 col-sm-6">
                                        <div class="table-responsive bs-example widget-shadow">
                                            <h4>Mes Locations:</h4>
                                            <table class="table table-bordered">
                                                <thead>
                                                <tr> <th> Date Debut </th> <th>Date Fin </th> <th>Nom Produit</th> <th> Image </th> <th>Prix </th> <th>Prix Total</th><th>Supprimer</th> <th>Modifier</th> </tr>
                                                </thead>

                                                <tbody>
                                                {% for location in locations %}
                                                    <tr>
                                                        <th scope="row">{{ location.dateDebut|date("Y-m-d") }}</th>
                                                        <th scope="row">{{ location.dateFin|date("Y-m-d")  }}</th>

                                                        <th scope="row">{{ produits[0].id.nomProd }}</th>
                                                        <td><img src="{{ asset(produits[0].id.imgUrl) }}" style="width: 100px;height: 100px;"/></td>
                                                        <th scope="row">{{ produits[0].id.prix }}</th>
                                                        <th scope="row">{{ location.prixtotal }}</th>
                                                        <td><a href="{{ path('supprimerloco',{'id': location.id}) }}" class="btn btn-danger"> Supprimer</a></td>
                                                        <td><a href="{{ path('modifierloco',{'id': location.id}) }}" class="btn btn-primary"> Modifier</a></td>
                                                    </tr>
                                                {% endfor %}



                                                </tbody>
                                            </table>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>



{% endblock %}