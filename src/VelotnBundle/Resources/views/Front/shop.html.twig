                                    <div class="product-item">
                                        <div class="pi-pic">
                                            <img src="{{ asset(product.id.imgUrl) }}" width="200" height="200" alt="">
                                            <!--div class="sale pp-sale">Sale</div-->
                                            <div class="icon">
                                                <a href="" onclick="AjouterWishlist({{ product.id.id }})" style="color: #000" >
                                                    <i class="icon_heart_alt"></i>
                                                </a>
                                            </div>
                                            <ul>
                                                <li class="w-icon active">
                                                    <a href="" onclick="AjouterPanier({{ product.id.id }})" class="CartButton">
                                                        <input id="{{ product.id.id }}" class="id" value="{{ product.id.id }}" hidden>
                                                        <i class="icon_bag_alt"></i>
                                                    </a>
                                                </li>
                                                <li class="quick-view"><a href="{{ path('viewprod',{'prod':product.id.id | urlencrypt }) }}">+ Quick View</a></li>
                                                <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                            </ul>
                                            <div class="pi-text">
                                                <div class="catagory-name">{{ product.id.nomprod }}</div>
                                                <a href="">
                                                    <h5>{{ product.marque }}</h5>
                                                </a>
